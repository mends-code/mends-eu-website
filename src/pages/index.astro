import HeroSection from "../components/sections/HeroSection.astro";
import FeatureSection from "../components/sections/FeatureSection.astro";
import CallToActionSection from "../components/sections/CallToActionSection.astro";
import LogoSection from "../components/sections/LogoSection.astro";
import LogoElement from "../components/elements/LogoElement.astro";
import ScrollingTextSection from "../components/sections/ScrollingTextSection.astro";
import TestimonialSection from "../components/sections/TestimonialSection.astro";
