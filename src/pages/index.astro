        <p class="mt-4">Curabitur non nulla sit amet nisl tempus convallis quis ac lectus.</p>
      </div>
    </div>
  </section>

  <!-- Call to Action Section -->
  <section class="bg-gray-200 py-20">
    <div class="container mx-auto text-center">
      <h2 class="text-3xl font-bold">Ready to get started?</h2>
      <p class="mt-4">Join us today and start your journey!</p>
      <a href="/signup" class="mt-8 inline-block bg-blue-500 text-white px-8 py-3 rounded shadow hover:bg-blue-600 transition">Sign Up Now</a>
    </div>
  </section>

  <!-- Gallery Section -->
  <section class="container mx-auto px-4 py-20">
    <h2 class="text-4xl font-bold text-center">Gallery</h2>
    <div class="flex flex-wrap -m-4 mt-8">
      <div class="w-full sm:w-1/2 md:w-1/3 lg:w-1/4 p-4">
        <img src="/images/photo-1.jpg" alt="Photo 1" class="rounded shadow w-full h-auto">
      </div>
      <!-- Repeat for more images -->
    </div>
