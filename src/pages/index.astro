import Presentation from '../components/Presentation.astro';
import Layout from '../layouts/Layout.astro';
---

<!-- Use the Presentation component and insert HTML content for the slides -->
<Layout>
	</Layout><Presentation>
		<section class="text-2xl font-bold">Slide 1: Custom HTML content here</section>
		<section class="mt-4 p-5 text-lg bg-gray-100 rounded-lg shadow">Slide 2: More custom HTML content here</section>
  <!-- Hero Section -->
  <!-- Hero Section -->
  <section class="text-center py-20 bg-blue-500 text-white r-fit-text">
    <h1 class="text-5xl font-bold">Welcome to Our Service</h1>
    <p class="text-xl mt-4">Offering you the best</p>
    <a href="#features" class="mt-8 inline-block bg-white text-blue-500 px-8 py-3 rounded shadow hover:bg-gray-100 transition">Learn More</a>
  </section>

  <!-- Features Section -->
  <section id="features" class="container mx-auto px-4 py-20">
    <h2 class="text-4xl font-bold text-center">Features</h2>
    <div class="flex flex-wrap -mx-4 mt-12 text-center">
      <div class="w-full md:w-1/3 px-4">
        <h3 class="text-2xl font-semibold">Fast</h3>
        <p class="mt-4">Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
      </div>
      <div class="w-full md:w-1/3 px-4">
        <h3 class="text-2xl font-semibold">Reliable</h3>
        <p class="mt-4">Pellentesque in ipsum id orci porta dapibus.</p>
      </div>
      <div class="w-full md:w-1/3 px-4">
