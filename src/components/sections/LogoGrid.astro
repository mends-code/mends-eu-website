---
interface Props {
  id?: string;
}
const { id } = Astro.props;
---

<section class="container mx-auto px-4 py-12 text-center bg-white" id={id}>
  <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold mb-6 text-matisse">
    <slot name="heading" />
  </h2>
  <div class="flex flex-wrap justify-center gap-6 md:gap-12 lg:gap-18">
    <slot /> <!-- This will hold all the LogoElement components or other content -->
  </div>
</section>
