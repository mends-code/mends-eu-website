---
interface Props {
	title?: string;
	imageUrl?: string;
	buttonText?: string;
	buttonLink?: string;
  id?: string;
}
const { title, imageUrl, buttonText, buttonLink, id } = Astro.props;
---

<section
	class="container mx-auto px-4 py-12 md:py-24 flex flex-wrap items-center min-h-full" id={id}
>
	<div class="w-full md:w-1/2 flex justify-center mb-8 md:mb-0">
		<img src={imageUrl} alt={title} class="max-w-xs md:max-w-sm lg:max-w-md w-full h-full aspect-square" />
	</div>
	<div class="w-full md:w-1/2 text-center md:text-left text-matisse max-w-xl">
		<h1 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-6">{title}</h1>
		<p class="text-xl md:text-2xl mb-8 text-rhino"><slot /></p>
		<a
			href={buttonLink}
			class="inline-block bg-apricot text-white font-bold py-2 px-6 rounded-full hover:bg-hippie-blue transition duration-300"
			>{buttonText}</a
		>
	</div>
</section>
