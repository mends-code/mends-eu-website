---
interface Props {
  id: string;
  buttonText: string;
  buttonLink?: string;
}

const { id, buttonText, buttonLink } = Astro.props as Props;
---

<section
  class="bg-matisse text-white py-12 md:py-24"
  id={id}
>
  <div class="container mx-auto px-4 text-center max-w-xl">
    <h1 class="text-3xl md:text-4xl lg:text-5xl font-display uppercase mb-6">
      <slot name="header" />
    </h1>
    <p class="text-xl md:text-2xl mb-8">
      <slot />
    </p>
    <a
      href={buttonLink}
      class="inline-block bg-rhino hover:bg-white text-white hover:text-rhino text-lg md:text-xl font-bold py-2 px-6 rounded-full transition duration-300"
    >
      {buttonText}
    </a>
  </div>
</section>
