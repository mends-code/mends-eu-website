---
// Navigation.astro
type NavLink = {
  text: string;
  href: string;
};

const navLinks: NavLink[] = Astro.props.navLinks;
---

<nav
  x-show="showNav"
  x-cloak
  x-transition:enter="transition ease-out duration-300"
  x-transition:enter-start="opacity-0 bg-opacity-0 !block"
  x-transition:enter-end="opacity-100 bg-opacity-30 !block"
  x-transition:leave="transition ease-in duration-300"
  x-transition:leave-start="opacity-100 bg-opacity-30 !block"
  x-transition:leave-end="opacity-0 bg-opacity-0 !block"
  @click="showNav = false"
  :style="navStyle"
  :class="showNav ? '' : 'hidden'"
  class="absolute overflow-auto px-10 rounded-3xl bg-white h-auto bg-opacity-70 backdrop-blur-lg transition-opacity no-scrollbar z-50"
>
  <ul
    class="flex grow-1 flex-col h-full w-full justify-center content-center gap-2"
  >
    {
      navLinks.map((link) => (
        <li class="justify-center flex">
          <a class="py-4 px-8 text-center font-bold uppercase text-lg md:text-xl lg:text-2xl xl:text-3xl tracking-widest align-middle text-rhino flex hover:bg-hippie-blue hover:bg-opacity-30 rounded-xl transition-colors w-fit" href={link.href}>
            {link.text}
          </a>
        </li>
      ))
    }
  </ul>
</nav>
