---
interface Props {
  svgClasses?: string; // Added to define `og:url` and `twitter:url` dynamically
}
const { svgClasses } = Astro.props; // Default to empty string if no classes are provided
---

<div class="mt-auto p-3 md:p-6"><div class="group relative"><button
  class="block peer nav-button"
  @click="showNav = !showNav"
  x-cloak
>
  <!--?xml version="1.0" encoding="UTF-8"?-->
  <div class="group-hover:opacity-0 transition-opacity duration-1000">
    <svg
      class=`${svgClasses}`
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 262 262"
      width="100%"
      height="100%"
    >
      <defs>
        <linearGradient
          id="rhino-to-pale-leaf-bottom"
          x1="0%"
          y1="0%"
          x2="0%"
          y2="100%"
        >
          <stop offset="0%" stop-color="#39435E">
            <animate
              attributeName="stop-color"
              values="#39435E; #38668D; #6AA2BC; #38668D; #39435E"
              dur="12s"
              repeatCount="indefinite"></animate>
          </stop>
          <stop offset="100%" stop-color="#38668D">
            <animate
              attributeName="stop-color"
              values="#38668D; #6AA2BC; #C5D9BC; #6AA2BC; #38668D"
              dur="12s"
              repeatCount="indefinite"></animate>
          </stop>
        </linearGradient>
      </defs>

      <rect
        fill="url(#rhino-to-pale-leaf-bottom)"
        x="0"
        y="0"
        width="262"
        height="62"
        rx="30.99997"
        ry="30.99997"></rect><rect
        fill="url(#rhino-to-pale-leaf-bottom)"
        x="0"
        y="100"
        width="262"
        height="62"
        rx="30.14894"
        ry="30.14894"></rect><rect
        fill="url(#rhino-to-pale-leaf-bottom)"
        x="0"
        y="200"
        width="262"
        height="62"
        rx="30.99997"
        ry="30.99997"></rect></svg
    >
  </div>
  <div class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-1000">
    <svg
      class=`${svgClasses}`
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 262 262"
      width="100%"
      height="100%"
    >
      <defs>
        <linearGradient
          id="frost-to-apricot-bottom"
          x1="0%"
          y1="0%"
          x2="0%"
          y2="100%"
        >
          <stop offset="0%" stop-color="#C5D9BC">
            <animate
              attributeName="stop-color"
              values="#C5D9BC; #EAF2DB; #E1C495; #EAF2DB; #C5D9BC"
              dur="12s"
              repeatCount="indefinite"></animate>
          </stop>
          <stop offset="100%" stop-color="#EAF2DB">
            <animate
              attributeName="stop-color"
              values="#EAF2DB; #E1C495; #EE8A66; #E1C495; #EAF2DB"
              dur="12s"
              repeatCount="indefinite"></animate>
          </stop>
        </linearGradient>
      </defs>

      <rect
        fill="url(#frost-to-apricot-bottom)"
        x="0"
        y="0"
        width="262"
        height="62"
        rx="30.99997"
        ry="30.99997"></rect><rect
        fill="url(#frost-to-apricot-bottom)"
        x="0"
        y="100"
        width="262"
        height="62"
        rx="30.14894"
        ry="30.14894"></rect><rect
        fill="url(#frost-to-apricot-bottom)"
        x="0"
        y="200"
        width="262"
        height="62"
        rx="30.99997"
        ry="30.99997"></rect></svg>
  </div></button
></div></div>
