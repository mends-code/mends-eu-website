---
// Import necessary components
import Head from "../components/common/Head.astro";
import Header from "../components/common/Header.astro";
import Footer from "../components/common/Footer.astro";
import Main from "../components/common/Main.astro";

// Define the expected props for the layout
interface LayoutProps {
  title: string;
  description: string;
  lang: string;
  navLinks: { text: string; href: string }[];
}

// Destructure props passed to the layout
const { title, description, lang, navLinks } = Astro.props as LayoutProps;
---

<html lang={lang}>
  <Head title={title} description={description} />
  <body x-data="{ showNav: false, navStyle: '' }" class="container mx-auto">
    <div
      class="h-screen container w-full fixed grid grid-rows-[fit-content(100%)_1fr_fit-content(100%)] grid-cols-[1fr_auto] grid-flow-row gap-0 bg-white"
    >
      <Header svgClasses="h-[38px] md:h-[62px]" />
      <Main>
        <slot />
      </Main>
      <Footer />
    </div>
  </body>
</html>
